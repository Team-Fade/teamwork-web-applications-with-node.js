extend ../common/_master

block main
    link(rel='stylesheet', href='../../public/css/users/manage-event.css', type='text/css')
    script(src="../../public/js/users/edit.profile.helper.js")
    form(action=`/events/manage/${context._id}` method='POST' enctype="multipart/form-data")    
        div(class="row")     
            div(class="input-field col s12 m5 l3")
                button(class="deep-orange material-icons prefix") 
                    |mode_edit
                input(disabled name="eventName" value=context.eventName id="eventName" type="text" class="validate")
                label(for="eventName")
                    |Event name: 
            div(class="input-field col s12 m5 l3")
                button(class="deep-orange material-icons prefix") 
                    |mode_edit
                input(disabled name="eventLocation" value=context.eventLocation id="eventLocation" type="text" class="validate")
                label(for="eventLocation")
                    |Event location:
        div(class="row")
            div(class="input-field col s12 m5 l3")
                button(class="deep-orange material-icons prefix") 
                    |mode_edit
                input(disabled name="eventType" value=context.eventType id="eventType" type="text" class="validate")
                label(for="eventType")
                    |Event type:
            div(class="input-field col s12 m5 l3")
                button(class="deep-orange material-icons prefix") 
                    |mode_edit
                input(disabled name="eventDescription" value=context.eventDescription id="eventDescription" type="text" class="validate")
                label(for="eventDescription")
                    |Event description:
        div(class="row")
            div(class="input-field col s12 m5 l3")
                button(class="deep-orange material-icons prefix") 
                    |mode_edit
                input(disabled name="eventDate" type="date" id="datepicker" class="datepicker")
                i(class="material-icons prefix")|date_range                
            div(class="input-field col s12 m5 l3" id="hours-picker-form")
                button(class="deep-orange material-icons prefix") 
                   |mode_edit                      
                input(disabled name="eventTime" type="date" id="eventTime" class="timepicker")
                i(class="material-icons prefix")|access_time
        div(class="row")            
            div(class="col s4 file-field input-field")
                div(class="btn deep-orange")
                    span
                        |Image
                    input(type="file" name="eventImage" accept="application/x-zip-compressed,image/*")
                div(class="file-path-wrapper")
                input(class="file-path validate" type="text")
            button(type='submit' class='btn deep-orange' id='manage-event-save-btn')
                    |Save
            button(class='btn deep-orange' id='manage-event-discard-btn')
                    |Discard changes
        script(src="../../public/js/events/datepicker.js")
        script(src="../../public/js/events/timepicker.js")