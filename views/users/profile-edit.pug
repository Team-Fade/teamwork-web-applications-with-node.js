extend ../common/_master
include ../utils/notifications

block main
    link(rel='stylesheet', href='../../public/css/users/profile-edit.css', type='text/css' )
    script(src="../../public/js/users/edit.profile.helper.js")
    +notifications()
    div(class="row")
        form(action="/user/profile/edit" method="POST" enctype="multipart/form-data")
            h4
                |#{user.username}
            div(class="row col s12 m6 l6 file-field input-field")
                div(class="btn deep-orange")
                    span
                        |Change Image
                    input(type="file" name="profile" accept="application/x-zip-compressed,image/*")                 
                div(class="file-path-wrapper")
                input(class="file-path validate" type="text")
            div(class="input-field col s11 m6 l5")
                input(disabled value="" name="password" id="password" type="password" class="validate")
                label(for="password")
                    |Change Password    
                button(class="deep-orange material-icons prefix") 
                    |mode_edit
            div(class="input-field col s11 m6 l5")
                input(disabled value=user.email name="email" id="email" type="email" class="validate")
                label(for="email")
                    |Change Email
                button(class="deep-orange material-icons prefix") 
                    |mode_edit
            button(type='submit' class='btn deep-orange' id="submit-button")
                | Submit