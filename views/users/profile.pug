extend ../common/_master
include ../utils/notifications

block main
    link(rel='stylesheet', href='../../public/css/users/profile.css', type='text/css')
    +notifications()
    div(class="row")
        div(class="card col s12 m5 l3" id="profile-container")
            img(class="responsive-img circle" src="data:image/png;base64," + user.profileImage id="profile-img")
            p(class="flow-text")
                    |Username: #{user.username}
            p(class="flow-text")
                    |Firstname: #{user.firstName}
            p(class="flow-text")
                    |Lastname: #{user.lastName}
            p(class="flow-text")
                    |City: #{user.city}
            p(class="flow-text")
                    |Email: #{user.email}
        div(class="col s12 m5 l3" id="profile-buttons")
            form(action="/user/profile/edit")
                button(class="btn deep-orange")
                    |Edit profile
            form(action="/events/create")
                button(class="btn deep-orange")
                    |Create event
            form(action="/user/profile/my-events")
                button(class="btn deep-orange")
                    |My events
            form(action="/events/browse")
                button(class="btn deep-orange")
                    |Browse all